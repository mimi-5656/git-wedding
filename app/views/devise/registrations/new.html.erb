<div class="container">
  <div class="row">
    <div class="col-1">
    </div>
     <h6 class="d-flex justify-content-left mb-5 bg-secondary p-2 text-black">新規会員登録</h6>
  </div>

      <%= form_with model: @gest, url: gest_registration_path, id: 'new_gest', class: 'new_gest', local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field row mb-2">
          <%= f.label :名前,class: "col-2"%>
          <%= f.label :（姓）,class: "col-1"%>
          <%= f.text_field :lastname, placeholder: "令和", autofocus: true, class: "col-3"%>
          <%= f.label :（名）,class: "col-1"%>
          <%= f.text_field :firstname, placeholder: "道子", autofocus: true, class: "col-3"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :フリガナ,class: "col-2"%>
          <%= f.label :（セイ）,class: "col-1" %>
          <%= f.text_field :kana_last_name,placeholder: "レイワ", autofocus: true, class: "col-3"%>
          <%= f.label :（メイ）,class: "col-1" %>
          <%= f.text_field :kana_first_name,placeholder: "ミチコ",autofocus: true, class: "col-3"%>
        </div>
        <div class="field row mb-2">
          <%= f.label :パスワード（６文字以上）,class: "col-3"%>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-3" %>
        </div>
        <div class="row mb-2">
          <%= f.label :パスワード（確認用）,class: "col-3"%>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-3" %>
        </div>
        <div class="field row mb-4">
           <div class="col-3"></div>
          <%= f.submit "新規登録" ,class: "col-2 btn btn-sm btn-success" %>
        </div>
        <% end %>

        <div class="row">
          <div class="col-2">
          <h6 class="d-flex justify-content-left mb-4 bg-secondary p-2 text-black bg-opacity-10">既に登録済みの方</h6>
          </div>
        </div>
        <div class="col-5">
         <p><%= link_to "こちら",new_gest_session_path, class: "link-primary"%>からログインしてください。</P>
        </div>
</div>
